---
import BaseLayout from '#layouts/base-layout.astro'
import Link from 'astro-typesafe-routes/link'
import { getCollection } from 'astro:content'

const entries = await getCollection('hommages')
---

<BaseLayout>
	{
		entries.map((itm) => (
			<Link to="/hommages/[slug]" params={{ slug: itm.id }}>
				{itm.data.title}
			</Link>
		))
	}
</BaseLayout>
